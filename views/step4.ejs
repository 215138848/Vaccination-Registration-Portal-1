<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Include Head -->
        <%- include("./partials/head") %>
    </head>
    <body>
        <!-- Include NavBar -->
        <%- include("./partials/nav") %>

        <div class="container container-fluid mt-4" style="width: 60%;">
            

            <form action="/input4" method="POST">
                <div class="step step-4" style="display: block;">
                    <h3 class="mb-4 mt-4" style="text-align: center;">Step 4 of 8: Address</h3>

                    <div class="container mb-4">
                        <div class="jumbotron bg-light" style="border-radius: 30px;">
                          <div class="row">
                            <div class="col-sm-2">
                              <!--Info Icon-->
                              <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                              </svg>
                              <!--Icon-->
                            </div>
                            <div class="col ">
                              <p>Please enter your address as accurately as possible. This will help us allocate you to an <b>available</b> vaccination site <b>as close</b> and <b>as soon</b> as possible.</p>
                            </div>
                          </div>
                        </div>
                    </div>

                    <div  class="container mb-3" style="margin-top: 30px;">
                        <select required class="form-control " name="province" id="province" style="width: 100%; height: 50px;" onChange="changeMunicipality(this.value);">
                           <option value="" style="display: none;">Province</option>
                           <option value="wc">Western Cape</option>
                           <option value="ec">Eastern Cape</option>
                           <option value="nc">Northern Cape</option>
                           <option value="ga">Gauteng</option>
                           <option value="mp">Mpumalanga</option>
                           <option value="fs">Free State</option>
                           <option value="kzn">KwaZulu Natal</option>
                           <option value="lm">Limpopo</option>
                           <option value="nw">North West</option>
                        </select>
                        <p class="navbar-text container-fluid">Select the province where you are</p>
                    </div>

                    <div class="container-fluid mb-3" >
                        <select required class="form-control " name="municipality" id="municipality" style="width: 100%; height: 50px;">
                           <option value="" style="display: none;">Municipality</option>
                        </select>
                    </div>
                    <div class="container mb-3" >
                        <input type="text" class="form-control" id="validationServer02" placeholder="Address" name="address" >
                        <p class="container-fluid">Address is optional</p>
                    </div>
                    
                    <div>
                        <a href="/step3" class="btn btn-outline-secondary mt-4" role="button" style="border-radius: 30px; color: rgb(6, 131, 248);">Go back</a>  
                        <button class="btn btn-outline-primary mt-4" type="submit" style="border-radius: 30px;" >Next step</button>
                    </div>
    
                </div>
            </form>

            <!-- Include Footer -->
        <%- include("./partials/footer") %>

        <script>
            var pronvicesByCategory = {
            wc: ["City of Cape Town Metropolitan", "Cape Winelands District", "Central Karoo District", "Other"],
            ec: ["Buffalo City Metropolitan", "Nelson Mandela Bay Metropolitan", "Other"],
            nc: ["Frances Baard District", "Dikgatlong Local", "Magareng Local", "Phokwane Local", "Sol Plaatje Local", "John Taolo Gaetsewe District", " Ga-Segonyana Local", "Other"],
            mp: ["Ehlanzeni District", "Bushbuckridge Local", "City of Mbombela Local", "Nkomazi Local", "Thaba Chweu Local", "Gert Sibande District", "Chief Albert Luthuli Local", "Other"],
            fs: ["Mangaung Metropolitan", "Fezile Dabi District", "Mafube Local", "Lejweleputswa District", "Other"],
            lm: ["Capricorn District", "Blouberg Local", "Mopani District", "Ba-Phalaborwa Local", "Other"],
            nw: ["Bojanala Platinum District" ,"Kgetlengrivier Local" ,"Madibeng Local" ,"Moretele Local" ,"Moses Kotane Local" ,"Rustenburg Local" ,"Dr Kenneth Kaunda District", "Other"],
            kzn: ["eThekwini", "Amajuba District", "Harry Gwala District", "Other"],
            ga: ["City of Ekurhuleni", "City of Johannesburg Metropolitan", "Emfuleni Local", "Lesedi Local", "Other"]
            }
            function changeMunicipality(value) {
                if (value.length == 0) document.getElementById("municipality").innerHTML = "<option></option>";
                else {
                    var catOptions = "";
                    for (categoryId in pronvicesByCategory[value]) {
                        catOptions += "<option>" + pronvicesByCategory[value][categoryId] + "</option>";
                    }
                    document.getElementById("municipality").innerHTML = catOptions;
                }
            }
        </script>
    </body>
</html>