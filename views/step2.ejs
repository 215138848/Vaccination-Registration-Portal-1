<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Include Head -->
        <%- include("./partials/head") %>
        
    </head>
    <body>
        <!-- Include NavBar -->
        <%- include("./partials/nav") %>

        <div class="container container-fluid" style="width: 50%;">

            <form id="step1-form">
                <div class="step step-2" >
                    <h3 class="mb-4 mt-4" style="text-align: center;">Step 2 of 8: General Information</h3>
                    <div>
                        <input type="text" class="form-control mb-3" id="validationServer01" placeholder="ID Number" required>
                    </div>
                    
                    <div>
                        <input type="text" class="form-control mb-3" id="validationServer02" placeholder="Passport (Optional)" >
                    </div>

                    <div>
                        <input type="date" class="form-control mb-3" id="validationServer03" required >
                    </div>
                    </div>

                    <div>
                        <input type="text" class="form-control mb-3" id="validationServer04" placeholder="First Name(s)" required>
                    </div>

                    <div>
                        <input type="text" class="form-control mb-3" id="validationServer05" placeholder="Surname" required>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input " type="checkbox" value="" id="invalidCheck3" aria-describedby="invalidCheck3Feedback" required>
                        <label class="form-check-label" for="invalidCheck3">
                            Agree to terms and conditions
                        </label>
                        <div id="invalidCheck3Feedback" class="invalid-feedback">
                            I confirm that the Information provided is correct.
                        </div>
                    </div>
    
                    <div>           
                        <button class="btn btn-outline-primary mt-4" type="button" style="border-radius: 30px;">Go back</button>
                        <button class="btn btn-outline-primary mt-4" type="submit" style="border-radius: 30px;" onclick="nextStep()">Next step</button>
                    </div>
                    
                </div>

                
            </form>
            <script>
                function nextStep(){
                    const thisForm = document.getElementById('step1-form');
                    if(thisForm.oninvalid == true){
                        console.log('Invailid!!!');
                    }
                    else{
                        console.log('Next Step Active...Step 3!!!');
                    }
                 
                }
            </script>

            <!-- Include Footer -->
        <%- include("./partials/footer") %>

        
        
    </body>
</html>